<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Complete?</th>
      <th>Name</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag(:complete) %></td>
        <td><%= link_to task.name, task %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
