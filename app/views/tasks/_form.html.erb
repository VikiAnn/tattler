<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="name"><%= f.label :name %></label><br>
    <%= f.text_field :name, :class=>"form-control", :placeholder=> "Task name" %>
  </div>
  <div class="form-group">
    <label for="description"><%= f.label :description %><br>
    <%= f.text_area :description, :class=>"form-control", :placeholder=> "Task description" %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline %>
  </div>
  <div class="checkbox">
      <%= f.label :completed %>
      <%= f.check_box(:completed) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
